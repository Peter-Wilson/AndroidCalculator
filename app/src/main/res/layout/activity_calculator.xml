<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/repeated_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CalculatorActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.3">

</LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:gravity="right"
    android:outlineProvider="paddedBounds"
    android:background="@drawable/output_screen"
    android:orientation="vertical"
    android:layout_weight="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/history"
        android:layout_marginRight="20dp"
        android:layout_marginTop="4dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/value"
        android:layout_marginRight="20dp"
        android:textSize="30dp"
        android:paddingRight="10dp"
        android:text="@string/zero"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:text="TEXAS INSTRUMENTS"
            android:textColor="#FFFFFF"
            android:textSize="17dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:src="@drawable/solar_panel"/>

        </LinearLayout>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:src="@drawable/ti_108_logo"
        android:layout_weight="1"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">
            </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="4">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="ConcatNumber"
                android:gravity="top|center_horizontal"
                android:background="#CD3740"
                android:paddingTop="20dp"
                android:text="@string/seven"
                android:id="@+id/seven"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="ConcatNumber"
                android:background="#CD3740"
                android:gravity="top|center_horizontal"
                android:paddingTop="20dp"
                android:text="@string/four"
                android:id="@+id/four"
                android:layout_weight="1"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="ConcatNumber"
                android:gravity="top|center_horizontal"
                android:background="#CD3740"
                android:paddingTop="20dp"
                android:text="@string/one"
                android:id="@+id/one"
                android:layout_weight="1"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="Correct"
                android:background="#CD3740"
                android:text="@string/correct"
                android:gravity="top|center_horizontal"
                android:paddingTop="20dp"
                android:id="@+id/correct"
                android:layout_weight="1"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#CD3740"
                android:onClick="ConcatNumber"
                android:text="@string/eight"
                android:gravity="top|center_horizontal"
                android:paddingTop="20dp"
                android:id="@+id/eight"
                android:layout_weight="1"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="ConcatNumber"
                android:gravity="top|center_horizontal"
                android:background="#CD3740"
                android:paddingTop="20dp"
                android:text="@string/five"
                android:id="@+id/five"
                android:layout_weight="1"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="ConcatNumber"
                android:gravity="top|center_horizontal"
                android:background="#CD3740"
                android:paddingTop="20dp"
                android:text="@string/two"
                android:id="@+id/two"
                android:layout_weight="1"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="ConcatNumber"
                android:gravity="top|center_horizontal"
                android:background="#CD3740"
                android:paddingTop="20dp"
                android:text="@string/zero"
                android:id="@+id/zero"
                android:layout_weight="1"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="ConcatNumber"
                android:gravity="top|center_horizontal"
                android:background="#CD3740"
                android:paddingTop="20dp"
                android:text="@string/nine"
                android:id="@+id/nine"
                android:layout_weight="1"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|center_horizontal"
                android:background="#CD3740"
                android:paddingTop="20dp"
                android:onClick="ConcatNumber"
                android:text="@string/six"
                android:id="@+id/six"
                android:layout_weight="1"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|center_horizontal"
                android:background="#CD3740"
                android:paddingTop="20dp"
                android:text="@string/three"
                android:id="@+id/three"
                android:onClick="ConcatNumber"
                android:layout_weight="1"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="ConcatNumber"
                android:gravity="top|center_horizontal"
                android:background="#CD3740"
                android:paddingTop="20dp"
                android:text="@string/decimal"
                android:id="@+id/decimal"
                android:layout_weight="1"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25">
         </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:gravity="top|center_horizontal"
                android:background="#CD3740"
                android:paddingTop="20dp"
                android:layout_height="match_parent"
                android:text="@string/plus"
                android:onClick="ConcatNumber"
                android:id="@+id/plus"
                android:layout_weight="1"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/minus"
                android:gravity="top|center_horizontal"
                android:background="#CD3740"
                android:paddingTop="20dp"
                android:id="@+id/minus"
                android:layout_weight="1"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_weight="2">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/equals"
                android:gravity="top|center_horizontal"
                android:background="#CD3740"
                android:paddingTop="20dp"
                android:id="@+id/equals"
                android:layout_weight="2"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
